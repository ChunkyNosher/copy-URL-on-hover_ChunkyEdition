{
  "name": "copy-url-on-hover-chunkyedition",
  "version": "1.5.9.10",
  "description": "Copy URL on Hover extension with hybrid modular architecture and persistent panel manager",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run clean && rollup -c && npm run copy-assets",
    "build:prod": "npm run clean && rollup -c --environment BUILD:production && npm run copy-assets",
    "watch": "rollup -c --watch",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy-assets": "cp background.js popup.html popup.js options_page.html options_page.js state-manager.js manifest.json dist/ && cp -r icons sidebar dist/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@joebobmiles/pointer-events-polyfill": "^1.0.0-alpha.1",
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/webextension-polyfill": "^0.12.4",
    "babel-jest": "^29.7.0",
    "broadcast-channel": "^7.2.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.2.5",
    "rollup": "^3.29.0",
    "sinon": "^21.0.0",
    "sinon-chrome": "^3.0.1",
    "web-ext": "^9.1.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@playwright/mcp": "^0.0.47",
    "eventemitter3": "^5.0.1",
    "lodash-es": "^4.17.21",
    "uuid": "^13.0.0",
    "webext-options-sync": "^4.3.0",
    "webext-storage-cache": "^6.0.3",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^5.0.8"
  }
}
