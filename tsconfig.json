{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*", "scripts/**/*", "sidebar/**/*"],
  "exclude": ["node_modules", "dist"]
}
